

<p>
  <strong>Name:</strong>
  <%= @dog.name %>
</p>

<p>
  <strong>Size:</strong>
  <%= @dog.size %>
</p>

<p>
  <strong>About:</strong>
  <%= @dog.about %>
</p>

<p>
  <strong>Image:</strong>
  <img src="<%= @dog.image %>" alt="pup">
</p>

<%#= x = User.where(:id => :owner_id).at(0) %>
<p>
  <strong>Owner:</strong>
  <%= @dog.owner.username %>
</p>

<table class="table table-bordered border-primary">
    <thead>
    <tr>
      <th>Time of Day</th>
      <th>Sunday</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>
  <tbody>
  <tr>
  <th scope="row">Morning</th>
    <td><%= humanize_boolean(@dog.sunday_morning) %></td>
    <td><%= humanize_boolean(@dog.monday_morning)%></td>
    <td><%= humanize_boolean(@dog.tuesday_morning) %></td>
    <td><%= humanize_boolean(@dog.wednesday_morning) %></td>
    <td><%= humanize_boolean(@dog.thursday_morning)%></td>
    <td><%= humanize_boolean(@dog.friday_morning) %></td>
    <td><%= humanize_boolean(@dog.saturday_morning) %></td>
    <tr>

     <th scope="row">Afternoon</th>
    <td><%= humanize_boolean(@dog.sunday_afternoon) %></td>
    <td><%= humanize_boolean(@dog.monday_afternoon)%></td>
    <td><%= humanize_boolean(@dog.tuesday_afternoon) %></td>
    <td><%= humanize_boolean(@dog.wednesday_afternoon) %></td>
    <td><%= humanize_boolean(@dog.thursday_afternoon)%></td>
    <td><%= humanize_boolean(@dog.friday_afternoon) %></td>
    <td><%= humanize_boolean(@dog.saturday_afternoon) %></td>
    </tr>
  
    <tr>
     <th scope="row">Afternoon</th>
    <td><%= humanize_boolean(@dog.sunday_night) %></td>
    <td><%= humanize_boolean(@dog.monday_night)%></td>
    <td><%= humanize_boolean(@dog.tuesday_night) %></td>
    <td><%= humanize_boolean(@dog.wednesday_night) %></td>
    <td><%= humanize_boolean(@dog.thursday_night) %></td>
    <td><%= humanize_boolean(@dog.friday_night) %></td>
    <td><%= humanize_boolean(@dog.saturday_night) %></td>
    </tr>

    
  </tbody>
</table>



